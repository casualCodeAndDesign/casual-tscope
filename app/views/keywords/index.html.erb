<p id="notice"><%= notice %></p>

<h2 style="margin-top: 40px;">Listing Keywords</h2>
<%= link_to 'New Keyword', new_keyword_path, :class=>"btn btn-primary", :style=>"float:right" %>
<% cache('keywords_home_table') do %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Image</th>
          <th>Word</th>
          <th>Tweets</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @keywords.each do |keyword| %>
          <tr>
            <td><%= image_tag keyword.image.thumb.url if keyword.image? %></td>  
            <td><%= keyword.word %></td>
            <td><%= keyword.tweets.count() %></td>
              <td><%= link_to 'Show', keyword, class: 'btn btn-success' %></td>
            <td><%= link_to 'Edit', edit_keyword_path(keyword), class: 'btn btn-primary' %></td>
              <td><%= link_to 'Destroy', keyword, class: 'btn btn-danger',method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
<% end %>
<br>
